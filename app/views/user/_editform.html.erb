<%= form_for @user do |f| %>
  <div class="divTable">
    <div class="divRow">
      <div class="divCell">
        <%= f.label :name %>
      </div>
      <div class="divCell">
        <%= f.text_field :user_name %><br />
      </div>
    </div>

    <div class="divRow">
      <div class="divCell">
        <%= f.label :Email %>
      </div>
      <div class="divCell">
        <%= f.email_field :email_id %>
      </div>
    </div>

   <div class="divRow">
     <div class="divCell">
       <%= f.label :password %>
     </div>
     <div class="divCell">
       <%= f.password_field:password %><br />
     </div>
   </div>

   <div class="divRow">
     <div class="divCell">
       <%= f.label :confirm_password %>
     </div>
     <div class="divCell">
       <%= f.password_field :password_confirmation %><br />
     </div>
   </div>
 
   <div class="divRow">
     <div class="divCell">
       <%= f.label :Mobile %>
     </div>
     <div class="divCell">
       <%= f.text_field :mobile %><br />
     </div>
   </div>

   <div class="divRow">
     <div class="divCell">
       <%= f.label :Country %>
     </div>
     <div class="divCell">
       <%= f.text_field :country %><br />
     </div>
   </div>

   <div class="divRow">
     <div class="divCell">
       <%= f.label :State %>
     </div>
     <div class="divCell">
       <%= f.text_field:state %><br />
     </div>
   </div>
 
   <div class="divRow">
     <div class="divCell">
       <%= f.label :City %>
     </div>
     <div class="divCell">
       <%= f.text_field :city %><br />
     </div>
   </div>
 
   <div class="divRow">
     <div class="divCell">
       <%= f.label :image %>
     </div>
     <div class="divCell">
       <%= f.file_field :avatar %><br />
     </div>
   </div>
  
   <div class="divRow">
     <div class="divCell">&nbsp;
     </div>
     <div class="divCell">
       <%= f.submit %>
     </div>
   </div>
 </div>
<% end %>
